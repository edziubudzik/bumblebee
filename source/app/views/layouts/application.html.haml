!!! xml
!!! strict
%html{html_attrs('pl-pl')}
	%head
		%meta{'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8'}

		%title Bumblebee
		
		%link{:href => '/stylesheets/application.css', :rel => "stylesheet", :type => "text/css"}
		= javascript_include_tag :defaults
		
	%body
	
		#header
			%a#logo
				Bumble
				%strong> bee
			#user_panel
				- if current_user
					.user
						= current_user.email
						= " (" + link_to("wyloguj", logout_path) + ")"
					- if @project
						.project= @project.name
				- else
					.login
						= link_to "Zaloguj się", login_path
						lub
						= link_to "utwórz nowe konto", new_user_path
		
		#container
		
			#main
				#notice= flash[:notice]

				#content
					= yield
				
			#sidebar
				= yield :sidebar
			
			.clear
		
		#footer
			.copyrights Projekt Bumblebee został przygotowany jako część dwóch prac magisterskich (Mateusza Gurgula i Piotra Batora) napisanych na&nbsp;Uniwersytecie Jagiellońskim pod kierunkiem prof. Mariusza Flasińskiego.
